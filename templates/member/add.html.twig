{% extends 'base.html.twig' %}

{% block title %}
    {% if page == 'create' %}
    New Character
    {% else %}
    Character {{ member.firstName }} {{ member.lastName }}
    {% endif %}
{% endblock %}



{% block body %}
<div class="container">


<h1> 
    {% if page == 'create' %}
        Nouveau Membre
    {% else %}
        Update {{ member.firstName }} {{ member.lastName }}
    {% endif %}
</h1>
<div class="text-end">
</div>

{{ form_start(form) }}

    {{ form_errors(form) }}
    {{ form_row(form.firstname) }}
    {{ form_row(form.lastname) }}
    {{ form_row(form.gender) }}
    

    <button type="submit" class="btn btn-primary mt-4">
    {% if 'member_add' == app.request.get('_route') %}
    Create
    {% else %}
    Update
    {% endif %}
    </button>

{{ form_end(form) }} 

</div>
{% endblock %}
