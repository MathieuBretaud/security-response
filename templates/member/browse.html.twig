{% extends 'base.html.twig' %}

{% block title %}Liste des membres{% endblock %}

{% block body %}
<header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container">
                <div class="collapse navbar-collapse justify-content-end " id="navbarNav">
                    <ul class="navbar-nav">                
                        <li class="nav-item">
                            <a class="nav-link {% if app.request.get('_route') == 'announcement_browse' %}active{% endif %}" href="{{ path('announcement_browse') }}">Les annonces</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link {% if app.request.get('_route') == 'announcement_browse' %}active{% endif %}" href="{{ path('announcement_browse') }}">Mon profil</a>
                        </li>                             
                    </ul>
                </div>
            </div>
        </nav>
    </header>

<main>
    <div class="container">
        <div class="d-flex flex-column flex-md-row">
            <div class="d-flex mt-4 text-center mx-auto">
                <h1>Bienvenue dans votre espace Membre</h1>
            </div>
        </div> 
        
        

            <section class="text-center container mt-4">
                <div class="d-flex">
                    <div class="mx-auto">
                        <h2 class="fw-bold">Liste des membres</h2>  
                            <div>
                                <div>
                                    <table class="mt-4">            
                                            <tbody>
                                                
                                                {% for member in member_browse %}                                                
                                                    <li class="list-group">
                                                        <a class="nav-link fs-6" aria-current="page" href="{{ url('member_browse') }}">{{ member.firstname }} {{ member.lastname }}</a>
                                                {% endfor %}
                                                
                                                
                                            </tbody>
                                    </table>  
                                </div>        
                            </div>
                    </div>
                </div>                  
            </section>
        </div>
    </div>
</main>     
{% endblock %}
